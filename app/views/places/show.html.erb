<div class="row" id="place">
  <div class="span9">
    <% box do %>
      <h3>
        <%= @place.title %>
        <% if @place.city %>
        <span>, <%= @place.city.title %><%= " #{@place.data['stars']}*" if @place.data['stars'] %></span>
        <% end %>
      </h3>
      <ul class="nav nav-tabs">
        <li>
          <%= link_to I18n.t('places.overview'), '#overview', 'data-toggle' => 'tab' %>
        </li>
        <% if @place.photos.any? %>
          <li>
            <%= link_to I18n.t('places.photos'), '#photos', 'data-toggle' => 'tab' %>
          </li>
        <% end %>
        <li>
          <%= link_to I18n.t('places.description'), '#description', 'data-toggle' => 'tab' %>
        </li>
        <li>
          <%= link_to I18n.t('places.location'), '#location', 'data-toggle' => 'tab' %>
        </li>
      </ul>
      <div class="tab-content">
        <div class="tab-pane" id="overview">
          <p><%= @place.description %></p>
        </div>
        <% if @place.photos.any? %>
          <div class="tab-pane" id="photos">
            <div class="fotorama" data-width="770" data-height="350">
              <% @place.photos.each do |photo| %>
                <%= link_to photo.url(:preview), photo.url(:thumb) %>
              <% end %>
            </div>
          </div>
        <% end %>
        <div class="tab-pane" id="description">
          <%= render partial: 'places/description', locals: { data: @place.data } %>
        </div>
        <div class="tab-pane" id="location">
          <h4><%= I18n.t('places.contacts') %></h4>
          <p><%= @place.address %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>