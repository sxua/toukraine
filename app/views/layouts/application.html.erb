<!DOCTYPE html>
<html>
  <head>
    <title><%= page_title %></title>
    <%= stylesheet_link_tag "application", media: "all" %>
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <%= meta_description_tag %>
    <%= meta_keywords_tag %>
    <%= csrf_meta_tags %>
    <%= analytics_init if Rails.env.production? %>
    <script type="text/javascript">
      var locale = "<%= I18n.locale %>";
    </script>
  </head>
  <body>
    <div id="background">
      <div class="fixed-image" style="background-image: url('/assets/bg.jpg'); background-color: <%= Option.get('background_color') rescue '#fff' %>;"></div>
    </div>
    <div class="container">
      <%= render partial: 'layouts/top_bar' %>
      <%= render partial: 'layouts/header' %>
      <div class="row">
        <div class="span9">
          <%= yield %>
        </div>
        <div class="span3">
          <%= render partial: 'layouts/aside' %>
        </div>
      </div>
      <div id="footer">
        <%= render partial: 'layouts/footer' %>
      </div>
    </div>
    <%= render partial: 'layouts/modals' %>
    <%= javascript_include_tag "application" %>
  </body>
</html>