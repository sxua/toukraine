<div class="row" id="top-bar">
  <div class="navbar span12">
    <div class="navbar-inner">
      <div class="container">
        <ul class="nav">
          <% if Page.published.for(:agencies).any? %>
            <li class="dropdown">
              <%= link_to '#', class: 'dropdown-toggle', 'data-toggle' => 'dropdown' do %>
                <%= I18n.t('topbar.for_agencies') %> <b class="caret"></b>
              <% end %>
              <ul id="agencies_menu" class="dropdown-menu">
                <% Page.published.for(:agencies).each do |page| %>
                  <li><%= link_to page.title, url_for(page) %></li>
                <% end %>
              </ul>
            </li>
          <% end %>
          <li class="dropdown">
            <%= link_to I18n.t('topbar.qa'), page_path('questions-and-answers') %>
          </li>
        </ul>
        <ul class="nav pull-right">
          <li><%= link_to I18n.t('topbar.about_company'), '#about_company', 'data-toggle' => 'modal', class: 'internal' %></li>
          <li><%= link_to I18n.t('topbar.contacts'), '#contacts', 'data-toggle' => 'modal', class: 'internal' %></li>
          <li><%= link_to I18n.t('topbar.map'), '#map', 'data-toggle' => 'modal', class: 'internal' %></li>
        </ul>
      </div>
    </div>
  </div>
</div>