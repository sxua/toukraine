<div class="row">
  <div class="span12" id="header">
    <% box class: 'box' do %>
      <%= link_to image_tag("logo_#{I18n.locale}.png"), root_path, id: 'header-logo' %>
      <ul class="nav" id="header-menu">
        <li>
          <div class="border border-blue border-first"></div>
          <%= link_to image_tag("home.png"), root_path, id: 'home' %>
        </li>
        <li class="dropdown">
          <div class="border border-lightblue"></div>
          <%= link_to '#', 'data-toggle' => 'dropdown', class: 'dropdown-toggle'  do %>
            <%= I18n.t('menu.ukraine') %> <b class="caret"></b>
          <% end %>
          <ul class="dropdown-menu">
            <% if I18n.locale == :en && Sight.any? %>
              <li><%= link_to I18n.t('menu.sights'), sights_path %></li>
            <% end %>
            <% Page.published.for(:about, :ukraine).each do |page| %>
              <li><%= link_to page.title, url_for(page) %></li>
            <% end %>
          </ul>
        </li>
        <% if Tour.types.any? %>
          <li class="dropdown">
            <div class="border border-green"></div>
            <%= link_to '#', 'data-toggle' => 'dropdown', class: 'dropdown-toggle' do %>
              <%= I18n.t('menu.tours') %> <b class="caret"></b>
            <% end %>
            <ul class="dropdown-menu">
              <% Tour.types.each do |tour_type| %>
                <li><%= link_to tour_type.title, url_for(tour_type) %></li>
              <% end %>
            </ul>
          </li>
        <% end %>
        <% if Region.for_locale(I18n.locale).for_menu(nil).any? && Hotel.any? %>
          <li class="dropdown">
            <div class="border border-orange"></div>
            <%= link_to '#', 'data-toggle' => 'dropdown', class: 'dropdown-toggle'  do %>
              <%= I18n.t('menu.hotels') %> <b class="caret"></b>
            <% end %>
            <ul class="dropdown-menu">
              <% Region.for_menu(nil).each do |region| %>
                <li><%= link_to region.title, hotels_region_path(region) %></li>
              <% end %>
            </ul>
          </li>
        <% end %>
        <li class="dropdown">
          <div class="border border-yellow border-last"></div>
          <%= link_to '#', 'data-toggle' => 'dropdown', class: 'dropdown-toggle'  do %>
            <%= I18n.t('menu.services') %> <b class="caret"></b>
          <% end %>
          <ul class="dropdown-menu">
            <% Page.published.for(:services).each do |page| %>
              <li><%= link_to page.title, url_for(page) %></li>
            <% end %>
          </ul>
        </li>
      </ul>
      <div id="header-phone">
        <span class="notice"><%= I18n.t('header.phone') %></span><br />
        <span class="code">+380 44 </span>
        <span class="phone">495 00 55</span>
      </div>
      <div class="clear"></div>
    <% end %>
  </div>
</div>