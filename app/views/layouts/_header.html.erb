<div class="row">
  <div class="span12" id="header">
    <% box class: 'box' do %>
      <%= link_to image_tag('logorv.png'), root_path, id: 'header-logo' %>
      <ul class="nav" id="header-menu">
        <li>
          <div class="border border-blue border-first"></div>
          <%= link_to image_tag("home.png"), root_path, id: 'home' %>
        </li>
        <li class="dropdown">
          <div class="border border-lightblue"></div>
          <%= link_to '#', 'data-toggle' => 'dropdown', class: 'dropdown-toggle'  do %>
            <%= I18n.t('menu.ukraine') %> <b class="caret"></b>
          <% end %>
          <ul class="dropdown-menu">
            <% Page.published.for(:about, :ukraine).each do |page| %>
              <li><%= link_to page.title, url_for(page) %></li>
            <% end %>
          </ul>
        </li>
        <% if Tour.any? %>
          <li class="dropdown">
            <div class="border border-green"></div>
            <%= link_to '#', 'data-toggle' => 'dropdown', class: 'dropdown-toggle' do %>
              <%= I18n.t('menu.tours') %> <b class="caret"></b>
            <% end %>
            <ul class="dropdown-menu">
              <li><%= link_to I18n.t('menu.tours_menu.medical_tours'), '#' %></li>
              <li><%= link_to I18n.t('menu.tours_menu.excursion_tours'), '#' %></li>
              <li><%= link_to I18n.t('menu.tours_menu.child_tours'), '#' %></li>
              <li><%= link_to I18n.t('menu.tours_menu.winter_tours'), '#' %></li>
              <li><%= link_to I18n.t('menu.tours_menu.sea_tours'), '#' %></li>
              <li><%= link_to I18n.t('menu.tours_menu.extreme_tours'), '#' %></li>
              <li class="divider"></li>
              <li><%= link_to I18n.t('menu.tours_menu.search'), '#' %></li>
            </ul>
          </li>
        <% end %>
        <% if Place.any? %>
          <li class="dropdown">
            <div class="border border-orange"></div>
            <%= link_to '#', 'data-toggle' => 'dropdown', class: 'dropdown-toggle'  do %>
              <%= I18n.t('menu.places') %> <b class="caret"></b>
            <% end %>
            <ul class="dropdown-menu">
              <% Place.top(5).each do |place| %>
                <li><%= link_to place.title, url_for(place) %></li>
              <% end %>
            </ul>
          </li>
        <% end %>
        <li class="dropdown">
          <div class="border border-yellow border-last"></div>
          <%= link_to '#', 'data-toggle' => 'dropdown', class: 'dropdown-toggle'  do %>
            <%= I18n.t('menu.services') %> <b class="caret"></b>
          <% end %>
          <ul class="dropdown-menu">
            <% Page.published.for(:services).each do |page| %>
              <li><%= link_to page.title, url_for(page) %></li>
            <% end %>
          </ul>
        </li>
      </ul>
      <div class="clear"></div>
    <% end %>
  </div>
</div>